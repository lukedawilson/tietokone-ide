@functions
{
  static string GetAssetPath(string searchPattern)
  {
    const string subpath = "dist/assets";
    var path = System.IO.Path.Combine(CodeEditor.Context.WebRootPath, subpath);
    var filename = System.IO.Path.GetFileName(Directory.GetFiles(path, searchPattern).First());
    return $"/{subpath}/{filename}";
  }
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>tietokone.io | IDE</title>

    <!-- Materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- custom CSS -->
    @if (CodeEditor.Context.IsDevelopment)
    {
      <link type="text/css" rel="stylesheet" href="~/css/site.css" />
    }
    else
    {
      <link rel="stylesheet" href="@GetAssetPath("styles-*.css")" />
    }
  </head>

  <body class="black white-text">
    <!-- navbar -->
    <div class="navbar-fixed">
      <nav class="deep-purple darken-3">
        <div class="nav-wrapper">
          <a href="/" hx-get="/" hx-target="#main-content" hx-push-url="true" class="brand-logo pl3">
            <i class="material-icons">code</i><span class="hide-mobile">Tietokone IDE</span>
          </a>
          <ul class="right">
            <li><a href="/editor" hx-get="/editor" hx-target="#main-content" hx-push-url="true">Editor</a></li>
            <li><a href="/privacy" hx-get="/privacy" hx-target="#main-content" hx-push-url="true">Privacy</a></li>
          </ul>
        </div>
      </nav>
    </div>

    <!-- main content -->
    <div id="main-content">
      @RenderBody()
    </div>

    <!-- JS dependencies -->
    <script defer src="https://unpkg.com/htmx.org@2.0.4"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- custom js -->
    @if (CodeEditor.Context.IsDevelopment)
    {
      <script defer type="module" src="~/js/components/code-editor.js"></script>
      <script defer type="module" src="~/js/components/split-grid-wrapper.js"></script>
      <!-- add custom scripts here -->
    }
    else
    {
      <script defer type="module" src="@GetAssetPath("main-*.js")"></script>
    }
  </body>
</html>
