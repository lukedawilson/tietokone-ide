@model Session

<style>
  /* grid layout */
  .grid {
    display: grid;
    grid-template-rows: 1fr 5px 1fr;
    height: calc(var(--vh, 1vh) * 100 - 128px) !important;
  }

  .gutter-row-1, .gutter-row-2 {
    cursor: row-resize;
    border: solid 1px #e57373; /* red lighten-2 */
  }

  .gutter-row-1 {
    grid-column: 1/-1;
  }

  .gutter-row-2 {
    grid-row: 2;
  }

  /* general layout overrides */
  html {
    background-color: white !important;

    &.dark {
      .gutter-row-1, .gutter-row-2 {
        border: solid 1px #4db6ac; /* teal lighten-2 */
      }

      background-color: #263238 !important; /* #263238 blue-grey darken-4 */

      .toolbar {
        background-color: #80cbc4 !important; /* teal lighten-3 */
      }

      .console {
        padding-left: 15px;
        padding-right: 15px;
        color: #ffffff !important; /* white */
        background-color: #263238 !important; /* #263238 blue-grey darken-4 */
      }
    }
  }

  .toolbar {
    background-color: #ef9a9a !important; /* red lighten-3 */
  }

  .console {
    height: calc(100% - 8px) !important;
    width: 100%;
    resize: none;
    border: none;
    overflow: auto;

    color: #01579b !important; /* light-blue darken-4 */
    background-color: #fafafa !important; /* grey lighten-5 */
  }

  .console:focus {
    outline: none;
  }
</style>

<code-editor-page sessionCode="@Model.Code"></code-editor-page>
