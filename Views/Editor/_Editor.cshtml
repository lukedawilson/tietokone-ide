@model Session

<style>
  /* grid layout */
  .grid {
    display: grid;
    grid-template-rows: @(Model?.EnableCodeExecution == true ? "1fr 5px 1fr" : "1fr");
    height: calc(var(--vh, 1vh) * 100 - 128px) !important;
  }

  .gutter-row-1, .gutter-row-2 {
    cursor: row-resize;
    border: solid 1px #64b5f6; /* blue lighten-2 */
    background-color: #64b5f6;
  }

  .gutter-row-1 {
    grid-column: 1/-1;
  }

  .gutter-row-2 {
    grid-row: 2;
  }

  /* general layout overrides */
  html {
    background-color: white !important;

    &.dark {
      .gutter-row-1, .gutter-row-2 {
        border: solid 1px #1976d2; /* blue darken-2 */
        background-color: #1976d2;
      }

      background-color: #212121 !important; /* grey darken-4 */

      .toolbar {
        background-color: #616161 !important; /* grey darken-2 */
      }

      .console {
        color: #ffffff !important; /* white */
        background-color: #212121 !important; /* grey darken-4 */
      }
    }
  }

  .toolbar {
    background-color: #64b5f6 !important; /* blue lighten-2 */
  }

  .console {
    height: calc(100% - 8px) !important;
    width: 100%;
    padding-left: 15px;
    padding-right: 15px;
    resize: none;
    border: none;
    overflow: auto;

    color: #01579b !important; /* light-blue darken-4 */
    background-color: #fafafa !important; /* grey lighten-5 */
  }

  .console:focus {
    outline: none;
  }
</style>

@if (Model != null)
{
  <code-editor-page enableCodeExecution="@Model.EnableCodeExecution" sessionCode="@Model.Code"></code-editor-page>
}