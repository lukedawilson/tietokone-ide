@model Session

<style>
  html {
    background-color: white !important;

    vaadin-split-layout::part(splitter) {
      background-color: #64b5f6 !important;
    }

    vaadin-split-layout::part(handle)::after {
      background-color: #1976d2 !important; /* blue darken-2 */
    }

    &.dark {
      background-color: #212121 !important; /* grey darken-4 */

      vaadin-split-layout::part(splitter) {
        background-color: #1976d2 !important;
      }

      vaadin-split-layout::part(handle)::after {
        background-color: #0d47a1 !important; /* blue darken-4 */
      }

      .toolbar {
        background-color: #616161 !important; /* grey darken-2 */
      }

      .console {
        color: #ffffff !important; /* white */
        background-color: #272822 !important;
      }
    }
  }

  .toolbar {
    background-color: #64b5f6 !important; /* blue lighten-2 */
  }

  .console {
    height: calc(100% - 12px) !important;
    width: calc(100% - 32px) !important;
    padding-left: 15px;
    padding-right: 15px;
    resize: none;
    border: none;
    overflow: auto;

    color: #01579b !important; /* light-blue darken-4 */
    background-color: #fafafa !important; /* grey lighten-5 */
  }

  .console:focus {
    outline: none;
  }
</style>

@if (Model != null)
{
  <code-editor-page enableCodeExecution="@Model.EnableCodeExecution" sessionCode="@Model.Code"></code-editor-page>
}