@model Session

<style>
  /* grid layout */
  .grid {
    display: grid;
    grid-template-rows: 1fr 5px 1fr;
    height: calc(var(--vh, 1vh) * 100 - 128px) !important;
  }

  .gutter-row-1, .gutter-row-2 {
    cursor: row-resize;
    border: solid 1px #6200ea; /* purple darken-4 */
  }

  .gutter-row-1 {
    grid-column: 1/-1;
  }

  .gutter-row-2 {
    grid-row: 2;
  }

  /* general layout overrides */
  html {
    background-color: #263238; /* #263238 blue-grey darken-4 */
  }

  .console {
    height: calc(100% - 8px) !important;
    width: 100%;
    resize: none;
    border: none;
    overflow: auto;
  }

  .console:focus {
    outline: none;
  }
</style>

<code-editor-page sessionCode="@Model.Code"></code-editor-page>
